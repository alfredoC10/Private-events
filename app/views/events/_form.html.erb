<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :title, class: "form-control", placeholder: "Event title" %>
  </div>
  <br/>

  <div class="field form-group">
    <%= form.text_area :description, class: "form-control", placeholder: "Event description" %>
  </div>
  <br/>

  <div class="field form-group">
    <%= form.date_select :date, class: "form-control", placeholder: "date" %>
  </div>
  <br/>

  <div class="field form-group">
    <%= form.text_field :location, class: "form-control", placeholder: "Location" %>
  </div>
  <br/>

  <div class="actions">
    <%= form.submit class:"btn -btn-secondary" %>
  </div>
  <br/>
<% end %>
